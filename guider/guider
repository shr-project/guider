# check python #
PYTHONBIN=$(which python)
if [ ! $PYTHONBIN ]
    then
        echo "[Error] Fail to find python"
        exit
fi

# export CMDLINE for Guider #
CMDLINE=$0
export CMDLINE

# launch Guider #
$PYTHONBIN -m guider $*

exit 0
